<ul>
  <li><%= @task.details %></li>
  <li><%= @task.completed? ? "This task is completed": "This task is not completed yet" %></li>
</ul>
<%= link_to "Back to list", tasks_path, class:"btn btn-primary" %>
<%= link_to "Edit task", edit_path, class:"btn btn-primary" %>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"btn btn-danger"
%>
